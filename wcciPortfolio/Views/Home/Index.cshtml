@model IEnumerable<wcciPortfolio.Models.Project>

@{
    ViewBag.Title = "Portfolio";
}

<div class="jumbotron">
    <h2>Hello, I'm Kyle McMahon</h2>
    <p class="lead">Have a look at some of the things I've made:</p>
</div>

<div id="portfolio-carousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#portfolio-carousel" data-slide-to="0" class="active"></li>
        @for (var i = 1; i < Model.Count(); i++)
        {
            <li data-target="#portfolio-carousel" data-slide-to="@i"></li>
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="@Model.First().ScreenshotPath" alt="@Model.First().Name">
            <div class="carousel-caption">
                <h3>@Model.First().Name</h3>
                <p>@Model.First().Description</p>
                <p><a class="btn btn-default btn-sm" href="@Model.First().GitHubUrl" target="_blank" role="button">GitHub &raquo;</a></p>                
            </div>
        </div>
        @for (var i = 1; i < Model.Count(); i++)
        {
            <div class="item">
                <img src="@Model.ElementAt(i).ScreenshotPath" alt="@Model.ElementAt(i).Name">
                <div class="carousel-caption">
                    <h3>@Model.ElementAt(i).Name</h3>   
                    <p>@Model.ElementAt(i).Description</p>
                    <p><a class="btn btn-default btn-sm" href="@Model.ElementAt(i).GitHubUrl" target="_blank" role="button">GitHub &raquo;</a></p>
                </div>
            </div>
        }
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#portfolio-carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#portfolio-carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>