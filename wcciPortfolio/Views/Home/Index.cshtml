@model IEnumerable<wcciPortfolio.Models.Project>

@{
    ViewBag.Title = "Portfolio";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <h2>@item.Name</h2>
            <a href="@item.ScreenshotPath" target="_blank"><img src="@item.ScreenshotPath" height="100" alt="@item.Name screenshot" /></a>            
            <p>
                @item.Description
            </p>
            <p><a class="btn btn-default" href="@item.GitHubUrl" target="_blank">GitHub &raquo;</a></p>
        </div>
    }
</div>